<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpScreen"
        android:background="@drawable/background2_a"
>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@null"
            android:textColor="#0D47A1"
            android:textColorHint="#0D47A1"
            android:id="@+id/username_signup_activity"
            android:hint="Username"
            android:textStyle="bold"
            android:gravity="fill|fill_vertical"
            android:paddingStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view6" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:id="@+id/view6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/email_signup_activity"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@null"
            android:textColor="#0D47A1"
            android:textColorHint="#0D47A1"
            android:textStyle="bold"
            android:id="@+id/email_signup_activity"
            android:hint="Email"
            android:gravity="fill|fill_vertical"
            android:paddingStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/view7"
            android:layout_marginEnd="8dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#fff"
            android:id="@+id/view7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/password_signup_activity"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@null"
            android:textColor="#0D47A1"
            android:textColorHint="#0D47A1"
            android:textStyle="bold"
            android:id="@+id/password_signup_activity"
            android:hint="Password"
            android:gravity="fill|fill_vertical"
            android:paddingStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/view3"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#fff"
            android:id="@+id/view3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/signup_button_signup_activity"/>
    <Button
            android:text="Sign Up"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button_signup_activity"
            android:backgroundTint="#fff"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/login_instead_signup_activity" android:layout_marginBottom="20dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Login in Instead?"
            android:textColor="#fff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:textStyle="bold"
            android:id="@+id/login_instead_signup_activity"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintEnd_toEndOf="@+id/signup_button_signup_activity"
            app:layout_constraintStart_toStartOf="@+id/signup_button_signup_activity"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/person_pin_white_320_by_320"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/username_signup_activity"
            app:layout_constraintBottom_toBottomOf="@+id/username_signup_activity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/email_white"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/email_signup_activity"
            app:layout_constraintBottom_toBottomOf="@+id/email_signup_activity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/key_white"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/password_signup_activity"
            app:layout_constraintBottom_toBottomOf="@+id/password_signup_activity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ProgressBarTheme"
            android:id="@+id/progress_bar_signup_screen" android:layout_marginEnd="182dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="341dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="181dp" android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/username_signup_activity"/>
</androidx.constraintlayout.widget.ConstraintLayout>