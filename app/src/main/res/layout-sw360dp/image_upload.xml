<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/background2_b"
>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="234dp"
                                                  android:layout_height="225dp"
                                                  android:src="@drawable/person_pink_320_by_320"
                                                  android:id="@+id/circle_image_view_image_upload"
                                                  android:layout_marginTop="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  app:civ_border_color="#0D47A1"
                                                  app:civ_border_width="3dp"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  app:layout_constraintHorizontal_bias="0.51"
    />

    <ImageView android:layout_width="60dp"
               android:layout_height="60dp"
               android:background="@drawable/circle_image_upload"
               app:layout_constraintTop_toTopOf="@+id/circle_image_view_image_upload"
               app:layout_constraintStart_toStartOf="@+id/circle_image_view_image_upload"
               app:layout_constraintEnd_toEndOf="@+id/circle_image_view_image_upload"
               app:layout_constraintBottom_toBottomOf="@+id/circle_image_view_image_upload"
               app:layout_constraintHorizontal_bias="0.931" app:layout_constraintVertical_bias="0.939"
               android:id="@+id/camera_image_view_image_upload"/>
    <ImageView android:layout_width="35dp"
               android:layout_height="35dp"
               android:src="@drawable/ic_camera_alt_black_24dp"
               app:layout_constraintTop_toTopOf="@+id/camera_image_view_image_upload"
               app:layout_constraintStart_toStartOf="@+id/camera_image_view_image_upload"
               app:layout_constraintBottom_toBottomOf="@+id/camera_image_view_image_upload"
               app:layout_constraintEnd_toEndOf="@+id/camera_image_view_image_upload"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ProgressBarTheme"
            android:id="@+id/progressBar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>