<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpScreen"
        android:background="@drawable/background2_a"
>

    <EditText
            android:layout_width="390dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@null"
            android:textColor="#0D47A1"
            android:textColorHint="#0D47A1"
            android:id="@+id/username_signup_activity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.412"
            android:hint="Username"
            android:textStyle="bold"
            android:gravity="fill|fill_vertical"
            android:paddingStart="10dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/email_signup_activity"
    />
    <EditText
            android:layout_width="385dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@null"
            android:textColor="#0D47A1"
            android:textColorHint="#0D47A1"
            android:textStyle="bold"
            android:id="@+id/email_signup_activity"
            app:layout_constraintStart_toStartOf="@+id/username_signup_activity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_signup_activity"
            app:layout_constraintEnd_toEndOf="@+id/username_signup_activity"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.073"
            android:layout_marginEnd="8dp"
            android:hint="Email"
            android:gravity="fill|fill_vertical"
            android:paddingStart="10dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#fff"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/password_signup_activity"
            app:layout_constraintTop_toBottomOf="@+id/email_signup_activity" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="380dp"
            android:layout_height="52dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@null"
            android:textColor="#0D47A1"
            android:textColorHint="#0D47A1"
            android:textStyle="bold"
            android:id="@+id/password_signup_activity"
            app:layout_constraintStart_toStartOf="@+id/email_signup_activity"
            app:layout_constraintEnd_toEndOf="@+id/email_signup_activity"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/email_signup_activity"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.222" app:layout_constraintVertical_bias="0.094"
            android:layout_marginEnd="8dp"
            android:hint="Password"
            android:gravity="fill|fill_vertical"
            android:paddingStart="10dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_signup_activity"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/signup_button_signup_activity"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Sign Up"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button_signup_activity"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#fff"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_signup_activity"
            app:layout_constraintStart_toStartOf="@+id/password_signup_activity"
            app:layout_constraintEnd_toEndOf="@+id/password_signup_activity"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintVertical_bias="0.144"
    />
    <TextView
            android:text="Login in Instead?"
            android:textColor="#fff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:textStyle="bold"
            android:id="@+id/login_instead_signup_activity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_button_signup_activity" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/signup_button_signup_activity"
            app:layout_constraintEnd_toEndOf="@+id/signup_button_signup_activity"
            app:layout_constraintVertical_bias="0.138"
            android:gravity="center_horizontal|center_vertical"
    />
</androidx.constraintlayout.widget.ConstraintLayout>