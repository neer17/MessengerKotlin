<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="100dp">

    <TextView
            tools:text="Receiver's Name"
            android:gravity="start|center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:paddingStart="10dp"
            android:textFontWeight="700"
            android:layout_width="168dp"
            android:layout_height="27dp"
            android:id="@+id/latest_message_receivers_layout"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.04"/>
    <TextView
            tools:text="timestamp"
            android:layout_width="168dp"
            android:layout_height="27dp"
            android:gravity="start"
            android:paddingStart="10dp"
            android:id="@+id/timestamp_receivers_layout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/latest_message_receivers_layout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/latest_message_receivers_layout"
            app:layout_constraintEnd_toEndOf="@+id/latest_message_receivers_layout" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>