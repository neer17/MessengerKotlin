<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="100dp">

    <TextView
            android:hint="Receiver's Name"
            android:gravity="start|center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:paddingStart="10dp"
            android:textFontWeight="700"
            android:layout_width="265dp"
            android:layout_height="46dp"
            android:id="@+id/tv_receivers_layout"
            app:layout_constraintTop_toTopOf="@+id/iv_receivers_layout"
            app:layout_constraintBottom_toBottomOf="@+id/iv_receivers_layout"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/iv_receivers_layout"
            android:layout_marginStart="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="51dp"
            android:layout_height="56dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/iv_receivers_layout"
            android:src="@drawable/ic_person_outline_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>