<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="67dp"
                                       android:background="@color/colorPrimary"
                                       android:id="@+id/toolbar_chat_log_activity"
                                       android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                                       android:layout_marginTop="0dp" android:layout_marginStart="0dp"/>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp" android:layout_height="40dp"
                                                  android:id="@+id/circle_image_view_chat_log_activity"
                                                  android:src="@drawable/ic_person_black_24dp"
                                                  android:layout_alignParentStart="true"
                                                  android:layout_marginStart="16dp" android:layout_alignParentTop="true"
                                                  android:layout_marginTop="12dp"/>
    <TextView
            tools:text="Username"
            android:layout_width="160dp"
            android:textColor="#fff"
            android:layout_height="wrap_content" android:id="@+id/username_tv_chat_log_activity"
            android:layout_alignParentStart="true"
            android:layout_marginStart="73dp" android:layout_marginTop="12dp" android:layout_alignParentTop="true"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="331dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="359dp" android:layout_alignParentStart="true"
            android:layout_marginStart="31dp" android:layout_alignParentTop="true" android:layout_marginTop="131dp"
            tools:listitem="@layout/recycler_view_item" android:id="@+id/recycler_view_chat_log_activity"/>
    <EditText
            android:layout_width="286dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_marginStart="5dp"
            android:layout_alignParentBottom="true" android:id="@+id/enter_message_et_chat_log_activity"
            android:layout_marginBottom="24dp" android:hint="Enter Message"
            android:layout_marginTop="98dp" android:layout_below="@+id/recycler_view_chat_log_activity"/>
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:layout_alignParentEnd="true" android:layout_marginEnd="17dp"
            android:id="@+id/send_bt_chat_log_activity"
            android:layout_marginBottom="-1dp"
            android:layout_alignTop="@+id/enter_message_et_chat_log_activity" android:layout_marginTop="-3dp"
            android:layout_alignBottom="@+id/enter_message_et_chat_log_activity"/>


</RelativeLayout>