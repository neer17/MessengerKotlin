<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatLogActivity">

    <androidx.recyclerview.widget.RecyclerView
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="371dp" android:layout_height="426dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/recycler_view_chat_log_activity"
            tools:listitem="@layout/sender_layout"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="286dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enter_message_et_chat_log_activity" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_chat_log_activity"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/send_bt_chat_log_activity"
            app:layout_constraintVertical_bias="1.0" android:hint="Enter Message"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_chat_log_activity"/>
    <Button
            android:text="Send"
            android:layout_width="70dp"
            android:layout_height="51dp"
            android:id="@+id/send_bt_chat_log_activity"
            app:layout_constraintTop_toTopOf="@+id/enter_message_et_chat_log_activity" app:layout_constraintBottom_toBottomOf="@+id/enter_message_et_chat_log_activity"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>