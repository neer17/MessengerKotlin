<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SigninActivity" android:background="@drawable/uplabs2">

    <EditText
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_et_signin_activity" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.048"
            android:background="@drawable/corners"
            android:hint="Email"
            android:paddingStart="10dp"
    />
    <EditText
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password_et_signin_activity"
            app:layout_constraintStart_toStartOf="@+id/email_et_signin_activity" app:layout_constraintEnd_toEndOf="@+id/email_et_signin_activity"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/email_et_signin_activity"
            app:layout_constraintHorizontal_bias="0.503" app:layout_constraintVertical_bias="0.085"
            android:hint="Password"
            android:background="@drawable/corners"
            android:paddingStart="10dp"
    />
    <Button
            android:text="SignIn"
            android:layout_width="246dp"
            android:layout_height="49dp"
            android:id="@+id/signin_button_signin_activity" app:layout_constraintStart_toStartOf="@+id/password_et_signin_activity"
            android:background="@drawable/corners"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_et_signin_activity" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/password_et_signin_activity"
            app:layout_constraintVertical_bias="0.111"/>
</androidx.constraintlayout.widget.ConstraintLayout>