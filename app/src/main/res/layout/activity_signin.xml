<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SigninActivity" android:background="@drawable/background2_a">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_et_signin_activity"
            android:background="@null"
            android:textColorHint="#0D47A1"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:hint="Email"
            android:paddingStart="10dp"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="7dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/view2" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="1.0"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:id="@+id/view2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/password_et_signin_activity"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:id="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/signin_button_signin_activity"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password_et_signin_activity"
            android:hint="Password"
            android:textColorHint="#0D47A1"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:background="@null"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/view"/>
    <Button
            android:text="SignIn"
            android:layout_width="246dp"
            android:layout_height="49dp"
            android:id="@+id/signin_button_signin_activity"
            android:backgroundTint="#fff"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/email_white"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/email_et_signin_activity"
            app:layout_constraintBottom_toBottomOf="@+id/email_et_signin_activity"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/key_white"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/password_et_signin_activity"
            app:layout_constraintBottom_toBottomOf="@+id/password_et_signin_activity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar_signin_screen" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>