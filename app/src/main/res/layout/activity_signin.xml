<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SigninActivity" android:background="@drawable/signup">

    <EditText
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_et_signin_activity" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="228dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            android:backgroundTint="#90CAF9"
            android:textColorHint="#0D47A1"
            android:textColor="#0D47A1"
            android:hint="Email"
            android:paddingStart="10dp"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/email_et_signin_activity"
            android:background="#90CAF9"
            android:id="@+id/view2" android:layout_marginTop="8dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#90CAF9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/view"
            app:layout_constraintBottom_toTopOf="@+id/signin_button_signin_activity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_et_signin_activity"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="374dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password_et_signin_activity"
            app:layout_constraintStart_toStartOf="@+id/email_et_signin_activity"
            app:layout_constraintEnd_toEndOf="@+id/email_et_signin_activity"
            app:layout_constraintHorizontal_bias="1.0"
            android:hint="Password"
            android:textColorHint="#0D47A1"
            android:textColor="#0D47A1"
            android:backgroundTint="#90CAF9"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginTop="60dp"/>
    <Button
            android:text="SignIn"
            android:layout_width="246dp"
            android:layout_height="49dp"
            android:id="@+id/signin_button_signin_activity"
            app:layout_constraintStart_toStartOf="@+id/password_et_signin_activity"
           android:backgroundTint="#fff"
            android:layout_marginTop="8dp"
            android:textColor="#0D47A1"
            app:layout_constraintTop_toBottomOf="@+id/password_et_signin_activity" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/password_et_signin_activity"
            app:layout_constraintVertical_bias="0.451" app:layout_constraintHorizontal_bias="0.397"/>
</androidx.constraintlayout.widget.ConstraintLayout>