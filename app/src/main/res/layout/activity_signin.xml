<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SigninActivity" android:background="@drawable/background2_a">

    <EditText
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_et_signin_activity" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="236dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="@null"
            android:textColorHint="#0D47A1"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:hint="Email"
            android:paddingStart="10dp"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/email_et_signin_activity"
            android:background="#fff"
            android:id="@+id/view2" android:layout_marginTop="8dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/view"
            app:layout_constraintBottom_toTopOf="@+id/signin_button_signin_activity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_et_signin_activity"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password_et_signin_activity"
            app:layout_constraintStart_toStartOf="@+id/email_et_signin_activity"
            app:layout_constraintEnd_toEndOf="@+id/email_et_signin_activity"
            app:layout_constraintHorizontal_bias="1.0"
            android:hint="Password"
            android:textColorHint="#0D47A1"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:background="@null"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginTop="60dp"/>
    <Button
            android:text="SignIn"
            android:layout_width="246dp"
            android:layout_height="49dp"
            android:id="@+id/signin_button_signin_activity"
            app:layout_constraintStart_toStartOf="@+id/password_et_signin_activity"
           android:backgroundTint="#fff"
            android:layout_marginTop="8dp"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/password_et_signin_activity" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/password_et_signin_activity"
            app:layout_constraintVertical_bias="0.451" app:layout_constraintHorizontal_bias="0.397"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/email_white"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/email_et_signin_activity"
            app:layout_constraintBottom_toBottomOf="@+id/email_et_signin_activity"
            app:layout_constraintEnd_toStartOf="@+id/email_et_signin_activity" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/key_white"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/password_et_signin_activity" android:layout_marginEnd="29dp"
            app:layout_constraintTop_toTopOf="@+id/password_et_signin_activity"
            app:layout_constraintBottom_toBottomOf="@+id/password_et_signin_activity"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>